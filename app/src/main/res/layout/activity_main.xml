<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.jef.variablefoundation.views.ActionBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:function="TITLE|LEFT_BTN|RIGHT_BTN" />

    <Button
        android:id="@+id/httpBt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Http" />

    <Button
        android:id="@+id/imageBt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Image" />

    <ImageView
        android:id="@+id/imageV"
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <Button
        android:id="@+id/showDialogBt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="showDialog" />

    <Button
        android:id="@+id/dismissDialogBt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="dismissDialog" />

    <Button
        android:id="@+id/exceptionBt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="exception" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.jef.variablefoundation.views.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:tip="@string/app_name" />

        <com.jef.variablefoundation.views.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:tip="@string/app_name" />
    </LinearLayout>
</LinearLayout>